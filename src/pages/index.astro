---
import { Image } from 'astro:assets';

import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Astro.">
	<main class="grid grid-rows-4 justify-center items-center min-h-screen w-full">
		<section class="flex flex-col text-center row-span-3 items-center justify-center gap-4 flex-1">
			<div class="flex flex-col gap-0 md:gap-2">
				<h1 class="md:text-9xl text-7xl font-black">Little Cow</h1>
				<h2 class="md:text-6xl text-4xl font-bold text-cown">Club</h2>
			</div>
			<div class="relative w-full ">
				<a href="mailto:ad_rojo@outlook.com" class="bg-moored absolute inset-x-0 mx-auto w-fit px-4 py-2 border-b-8 border-moored-shadow hover:border-b-4 hover:translate-y-1 active:translate-y-1.5 active:border-b-0">Contact us!</a>
			</div>
		</section>
		<section class="w-screen h-full row-span-1 bg-green-400 flex justify-center items-start relative">
			<Image src="/assets/cow.png" alt="" width={100} height={100} class="animate-bounce absolute -top-8" />
		</section>
	</main>
</Layout>

